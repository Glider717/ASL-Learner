  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "train_tfms = tt.Compose([\n",
    "                         tt.Resize((200, 200)),\n",
    "                         tt.RandomCrop(200, padding=25, padding_mode='reflect'),\n",
    "                         tt.RandomHorizontalFlip(),\n",
    "                         tt.RandomRotation(10),\n",
    "                         tt.RandomPerspective(distortion_scale=0.2),\n",
    "                         tt.ToTensor()\n",
    "                        ])\n",
    "test_tfms = tt.Compose([tt.Resize((200, 200)),\n",
    "                        tt.ToTensor()])"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "train_set = datasets.ImageFolder(data_dir_akash + '/Train', transform=train_tfms)\n",
    "test_set = datasets.ImageFolder(data_dir_akash + '/Test', transform=test_tfms)\n",
    "\n",
    "batch_size_train = 50\n",
    "batch_size_test = 100\n",
    "train = torch.utils.data.DataLoader(train_set, batch_size=batch_size_train, shuffle=True, pin_memory=True)\n",
    "test = torch.utils.data.DataLoader(test_set, batch_size=batch_size_test, shuffle=True, pin_memory=True)"
   ]
  },
  {
